@{
    ViewData["Title"] = "Consultation Calculator";
}
<h1>@ViewData["Title"]</h1>

<p>Want some help from the LEGOPro? Use this calculator to find out how much your LEGO consultation will cost.</p>

<img src="~/img/lego2.jpeg" width="600px" />
<br />
<br />

<!-- Calculator form -->
<form>
    <label>How many hours per week would you like?</label>
    <input type="number" id="numHours" /><br />

    <label>I need LEGOPro to provide LEGOs</label>
    <input type="checkbox" id="needLEGO" /><br />

    <br />
    <button type="button" id="btnCalculate">Calculate</button>
</form>

<!-- For some reason the css stylesheet wasn't updating the table, so I just put it here :) -->
<style>
    /* Table styles */
    table {
        border-collapse: collapse;
        width: 100%;
        max-width: 800px; /* Adjust the max-width as needed */
        margin: 20px auto; /* Center the table */
    }

    /* Table header styles */
    th {
        background-color: #f2f2f2; /* Light grey background */
        color: #333; /* Dark grey text color */
        border: 1px solid #ddd; /* Light grey border */
        padding: 10px;
        text-align: left;
    }

    /* Table row styles */
    tr:nth-child(even) {
        background-color: #f9f9f9; /* Even row background color */
    }

    tr:nth-child(odd) {
        background-color: #ffffff; /* Odd row background color */
    }

    /* Table cell styles */
    td {
        border: 1px solid #ddd; /* Light grey border */
        padding: 8px;
    }

    /* Hover effect for table rows */
    tr:hover {
        background-color: #e6f7ff; /* Light blue background on hover */
    }

    /* Example: Red border for specific cells */
    td.error {
        border: 2px solid #ff0000; /* Red border for cells with the 'error' class */
    }
</style>

<table>
    <thead>
        <tr>
            <th>Hours</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1-3 hours</td>
            <td>$30/hr</td>
        </tr>
        <tr>
            <td>4-7 hours</td>
            <td>$27/hr</td>
        </tr>
        <tr>
            <td>7-10 hours</td>
            <td>$25/hr</td>
        </tr>
        <tr style="font-weight: bold; border: 2px solid black;">
            <td>Your Quote</td>
            <td id="quote"></td>
        </tr>
    </tbody>
</table>


<script src="~/lib/jquery/jquery.min.js"></script>
<script src="~/js/site.js"></script>
