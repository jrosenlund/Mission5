@{
    ViewData["Title"] = "Consultation Calculator";
}
<h1>@ViewData["Title"]</h1>

<p>Want some help from the LEGOPro? Use this calculator to find out how much your LEGO consultation will cost.</p>

<img src="~/img/lego2.jpeg" width="600px" />
<br />
<br />

<!-- Calculator form -->
<form>
    <label>How many hours per week would you like?</label>
    <input type="number" id="numHours" /><br />

    <label>I need LEGOPro to provide LEGOs</label>
    <input type="checkbox" id="needLEGO" /><br />

    <br />
    <button type="button" id="btnCalculate">Calculate</button>
</form>

<style>
    /* Table styles */
    table {
        border-collapse: collapse;
        width: 100%;
        max-width: 800px; /* Adjust the max-width as needed */
        margin: 20px auto; /* Center the table */
    }

    /* Table header styles */
    th {
        background-color: #f2f2f2; /* Light grey background */
        color: #333; /* Dark grey text color */
        border: 1px solid #ddd; /* Light grey border */
        padding: 10px;
        text-align: left;
    }

    /* Table row styles */
    tr:nth-child(even) {
        background-color: #f9f9f9; /* Even row background color */
    }

    tr:nth-child(odd) {
        background-color: #ffffff; /* Odd row background color */
    }

    /* Table cell styles */
    td {
        border: 1px solid #ddd; /* Light grey border */
        padding: 8px;
    }

    /* Hover effect for table rows */
    tr:hover {
        background-color: #e6f7ff; /* Light blue background on hover */
    }

    /* Example: Red border for specific cells */
    td.error {
        border: 2px solid #ff0000; /* Red border for cells with the 'error' class */
    }
</style>

<table>
    <thead>
        <tr>
            <th>Hours</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>1-3 hours</td>
            <td>$30/hr</td>
        </tr>
        <tr>
            <td>4-7 hours</td>
            <td>$27/hr</td>
        </tr>
        <tr>
            <td>7-10 hours</td>
            <td>$25/hr</td>
        </tr>
        <tr style="font-weight: bold; border: 2px solid black;">
            <td>Your Quote</td>
            <td id="quote"></td>
        </tr>
    </tbody>
</table>


<script src="~/lib/jquery/jquery.min.js"></script>
<script>
    // Calculator functionality
    $("#btnCalculate").click(function () {
        let cost = 0;
        let numHours = $("#numHours").val();
        let needLEGO = $("#needLEGO").is(":checked");

        // Calculate cost based on hours
        if (numHours < 1) {
            $("#numHours").val("");
            $("#quote").html("");
            alert("Please enter a number between 1 and 10");
        }
        else if (numHours > 10) {
            $("#numHours").val("");
            $("#quote").html("");
            alert("That's too long! Please enter a number between 1 and 10")
        }
        else {
            if (numHours < 4) {
                cost = numHours * 30
            }
            else if (numHours < 7) {
                cost = numHours * 27
            }
            else {
                cost = numHours * 25
            }

            // Add possible cost of LEGOs
            if (needLEGO == true) {
                if (numHours < 3) {
                    cost = cost + 20
                }
                else if (numHours < 7) {
                    cost = cost + 30
                }
                else {
                    cost = cost + 40
                }
            }

            $("#quote").html("$" + cost);
        }
    });
</script>
